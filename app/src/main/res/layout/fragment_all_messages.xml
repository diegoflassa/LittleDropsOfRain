<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".ui.all_messages.AllMessagesFragment"
    android:tag="AllMessagesFragment">

    <!-- Filter Bar -->
    <FrameLayout
        android:id="@+id/filter_bar_container_all_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/filter_bar_all_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/button_filter_all_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_filter_list_white_24px"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="@string/button_filter" />

                <LinearLayout
                    android:id="@+id/text_current_search_container_all_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/button_clear_filter_all_messages"
                    android:layout_toEndOf="@+id/button_filter_all_messages"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/text_current_search_all_messages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_products"
                        android:textColor="@color/primaryDarkGreyTextColor"
                        tools:text="Filter" />

                    <TextView
                        android:id="@+id/text_current_sort_by_all_messages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sorted_by_creation_date"
                        android:textColor="@color/primaryDarkGreyTextColor" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/button_clear_filter_all_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_close_white_24px"
                    app:tint="@color/primaryDarkGreyTextColor"
                    android:contentDescription="@string/button_clear_filter" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewAllMessages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/recyclerview_item_message" />

        <!-- Empty list view -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/all_messages_view_empty"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:drawableTop="@drawable/splash"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/no_messages_found"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/all_messages_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>