<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_sendMessageFragment"
            app:destination="@id/sendMessageFragment"
            app:popUpTo="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_facebook"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.facebook.FacebookFragment"
        android:label="@string/menu_facebook"
        tools:layout="@layout/fragment_facebook" />

    <fragment
        android:id="@+id/nav_instagram"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.instagram.InstagramFragment"
        android:label="@string/menu_instagram"
        tools:layout="@layout/fragment_instagram" />

    <fragment
        android:id="@+id/nav_admin"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.admin.AdminFragment"
        android:label="@string/menu_admin"
        tools:layout="@layout/fragment_admin" >
        <argument
            android:name="who"
            app:argType="string"
            android:defaultValue="Admin - All Messages"/>
        <action
            android:id="@+id/nav_send_topic_message"
            app:destination="@id/send_topic_message_fragment"
            app:popUpTo="@id/nav_admin"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_nav_admin_to_sendMessageFragment"
            app:destination="@id/sendMessageFragment"
            app:popUpTo="@id/nav_admin" />
        <action
            android:id="@+id/nav_reload_products"
            app:destination="@id/reload_products_fragment"
            app:popUpTo="@id/nav_admin" />
    </fragment>

    <fragment
        android:id="@+id/nav_iluria"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.iluria.IluriaFragment"
        android:label="@string/menu_iluria"
        tools:layout="@layout/fragment_iluria" />

    <fragment
        android:id="@+id/nav_messages"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.messages.MessagesFragment"
        android:label="@string/messages"
        tools:layout="@layout/fragment_messages" >
        <action
            android:id="@+id/action_nav_messages_to_sendMessageFragment"
            app:destination="@id/sendMessageFragment"
            app:popUpTo="@id/nav_messages" />
    </fragment>

    <fragment
        android:id="@+id/send_topic_message_fragment"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.topic.SendTopicMessageFragment"
        android:label="@string/label_topic"
        tools:layout="@layout/fragment_send_topic_message" >
        <action
            android:id="@+id/action_sendSubscriptionMessageFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/nav_send_topic_message"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/sendMessageFragment"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.send_message.SendMessageFragment"
        android:label="Send Message"
        tools:layout="@layout/fragment_send_message">
        <action
            android:id="@+id/action_sendMessageFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/sendMessageFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.SettingsFragment"
        android:label="Settings" />

    <activity
        android:id="@+id/mainActivity"
        android:name="app.web.diegoflassa_site.littledropsofrain.MainActivity"
        android:label="app_bar_main"
        tools:layout="@layout/app_bar_main" />

    <action
        android:id="@+id/action_global_settingsFragment"
        app:destination="@id/settingsFragment" />

    <action
        android:id="@+id/action_global_adminFragment"
        app:destination="@id/nav_admin" />

    <action
        android:id="@+id/action_global_sendMessageFragment"
        app:destination="@id/sendMessageFragment" />

    <fragment
        android:id="@+id/nav_users"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.users.UsersFragment"
        android:label="@string/menu_users"
        tools:layout="@layout/fragment_users" />

    <fragment
        android:id="@+id/reload_products_fragment"
        android:name="app.web.diegoflassa_site.littledropsofrain.ui.reload_products.ReloadProductsFragment"
        android:label="@string/reload_products"
        tools:layout="@layout/fragment_reload_products" />


</navigation>